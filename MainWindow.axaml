		<Panel Grid.Row="2">
			<Image Margin="110" Height="150" Width="150"
				   Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia"/>
		</Panel>

		<DockPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
			<TextBlock Text="Home  " />
			<TextBlock Text="Prices  " />
			<TextBlock DockPanel.Dock="Right"
                        TextAlignment="Right"
                        Text="RSS  " />
			<TextBlock DockPanel.Dock="Right" Text="About us" />
		</DockPanel>
	</Grid>
